{
  "private": true,
  "type": "module",
  "scripts": {
    "tw": "npx tailwindcss -i ./styles/global.css -o ./dist/output.css --watch",
    "dev": "concurrently \"sudo service mysql start\" \"npm run tw\" \"npm run dev:next\"",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "test:once": "vitest run",
    "test": "vitest --watch",
    "test:ci": "vitest --ci",
    "eslint": "pnpx eslint --fix",
    "lint-staged": "pnpx lint-staged --quiet",
    "studio": "pnpx prisma studio",
    "prettier-format": "prettier --config .prettierrc '{Pages,Components,Utils}/**/*{.ts,.tsx,.js,.jsx}' --write",
    "pre-commit-checks": "concurrently \"npm run prettier-format\" \"npm run lint-staged\" ",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick --staged"
  },
  "lint-staged": {
    "*.(ts|tsx)": "pnpm run eslint"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "printWidth": 80,
    "semi": false,
    "singleAttributePerLine": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint",
      "pre-push": ""
    }
  },
  "dependencies": {
    "@testing-library/dom": "^8.20.1",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "next": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-crypto-js": "^3.0.1"
  },
  "devDependencies": {
    "@google-cloud/text-to-speech": "^4.2.3",
    "@prisma/client": "^5.7.1",
    "@testing-library/dom": "7.21.4",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.2.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "latest",
    "autoprefixer": "^10.4.16",
    "concurrently": "^7.6.0",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.5",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testing-library": "^5.11.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdom": "latest",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.32",
    "prettier": "2.8.3",
    "pretty-quick": "^3.1.3",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "latest"
  }
}
