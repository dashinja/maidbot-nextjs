{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["./style/*"],
      "@utilities/*": ["src/utilities/*"]
    },
    "types": [
      "@types/react",
      "@types/node",
      "vitest/globals",
      "vitest/jest-dom",
      "vitest/jest-dom/vitest",
      "@testing-library/jest-dom/vitest",
      "@testing-library/jest-dom/matchers",
      "@testing-library/extent",
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "__tests__/*.(ts|tsx)",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules"]
}
